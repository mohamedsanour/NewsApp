<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/newsImg"
        android:layout_width="106dp"
        android:layout_height="106dp"
        android:padding="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic"
        app:shapeAppearanceOverlay="@style/RoundedImageStyle"/>

    <TextView
        android:id="@+id/typeTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Europe"
        android:textColor="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/newsImg"
        app:layout_constraintTop_toTopOf="@+id/newsImg"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/descriptionTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="description"
        android:textColor="?attr/colorOnBackground"
        android:textSize="16sp"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="@+id/typeTxt"
        app:layout_constraintEnd_toEndOf="@+id/typeTxt"
        app:layout_constraintTop_toBottomOf="@+id/typeTxt"/>


    <TextView
        android:id="@+id/timeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14 m ago"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/descriptionTxt"
        app:layout_constraintTop_toBottomOf="@id/descriptionTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>